%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t('.title'), root_path, class: 'navbar-brand' 
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      -#TODO мобильное меню
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to t('.home'), root_path
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"} Catalog
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              %li
                = link_to t('.all'), projects_path
              - Category.all.each do |category|
                %li
                  = link_to category.title, projects_path(category_id: category.id)
                
          - if current_user
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} My account
              %ul.dropdown-menu
                %li= link_to 'Edit profile', edit_user_registration_path(current_user)
                %li.divider{role: "separator"}
                %li= link_to 'Log out', destroy_user_session_path, :method => :delete
          - else
            %li= link_to 'Log in', new_user_session_path 
            %li= link_to 'Register', new_user_registration_path

            
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t('.home'), root_path
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} Catalog
            %ul.dropdown-menu
              %li
                = link_to t('.all'), projects_path
              - Category.all.each do |category|
                %li
                  = link_to category.title, projects_path(category_id: category.id)
         
           
          - if current_user
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} My account
              %ul.dropdown-menu
                %li= link_to 'Edit profile', edit_user_registration_path(current_user)
                %li.divider{role: "separator"}
                %li= link_to 'Log out', destroy_user_session_path, :method => :delete
          - else
            %li= link_to 'Log in', new_user_session_path 
            %li= link_to 'Register', new_user_registration_path

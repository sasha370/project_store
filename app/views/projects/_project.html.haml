.col-xs-6.col-sm-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      = image_tag project.main_image, class: 'img-shadow general-thumbnail-img', alt: "#{project.title}"  
      .thumb-hover
        .general-thumb-link-wrap
          = link_to project_path(project), class: 'thumb-hover-link' do 
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          <!-- #TODO  переделать линку -->  
          %a.thumb-hover-link{href: "#"}
            %i.fa.fa-shopping-cart.thumb-icon
  .general-thumb-info
    %p.title= project.short_title
    %p.font-16.in-gold-500
      €
      = project.price
    %span.divider-sm
    %p.lead.small
      = project.user.first_name

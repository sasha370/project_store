- set_meta_tags title: ['Своими руками чертежи, инструкции', @project.title], keywords: @project.category.title, index: true

%main.container{ id: "project_card_#{@project.id}"}
  = link_to  :back, class: 'general-back-link' do
    %i.fa.fa-long-arrow-left.mr-15
    = t('.back_to_result')
  .row
    .col-sm-6
      = react_component("Gallery", { images: @project.images_for_gallery })

    <!-- #Prices  -->
    .col-sm-6
      %h1.mt-res-0
        = @project.title
      %small
        = t('projects.show.vendor_code')
        = @project.vendor_code
      .row
        - if @project.old_price
          .col-xs-12.col-md-3.mt-2    
            %p.h2.in-grey-600.strikethrough.mt-10
              = "#{@project.old_price} <small>₽</small>".html_safe
              
        .col-xs-12.col-md-3
          %p.h1.in-gold-500.mt-10 
            = @project.price
            %small.in-gold-500= t('number.currency.symbol')

        .col-xs-7.col-md-3.ml-auto
          = @project.cart_buttons
              
      <!-- #Description  -->
      .general-info-wrap.divider-lg
        %p.lead.small.line-height-2
          %div
            - if @project.description.length > 250
              = truncate(@project.description, length: 250)
              %br
              = link_to t('projects.show.read_more'), '', class: "in-gold-500 ml-10 read-more"
              :javascript
                $('.read-more').on('click', function(e) {
                  e.preventDefault()
                  $(this).parent().html("#{j @project.description}")
                })
            - else
              = @project.description

      <!-- #Additional params  -->
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left= t('.difficulty') 
          %p.lead.small.pull-right
            = @project.difficulty
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left= t('.dimensions')
          %p.lead.small.pull-right
            = @project.dimensions


%main.container.general-main-wrap.text-center
  .row
    .col-md-3
    .col-md-6
      .text-center
        %h3.general-login-title= t('.sign_up')
        = link_to user_facebook_omniauth_authorize_path, method: :post do
          %span{:style => "font-size: 3em; color: #c59c71;"}
            %i.bi.bi-facebook
        %p.general-login-text or

      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = bootstrap_devise_error_messages!
        .row.text-left  
          .col-md-6
            .form-group
              = f.label :first_name, t('models.user.first_name')
              = f.text_field :first_name, autofocus: true, autocomplete: 'first_name', placeholder: t('models.user.first_name_placeholder'), class: 'form-control', :required => true, minlength: 3
          .col-md-6
            .form-group
              = f.label :last_name, t('models.user.last_name')
              = f.text_field :last_name, autofocus: true, autocomplete: 'last_name', placeholder: t('models.user.last_name_placeholder'), class: 'form-control'
        .form-group.text-left
        .row.text-left  
          .col-md-6
            = f.label :email, t('models.user.email')
            = f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: t('models.user.email_placeholder'), class: 'form-control', :required => true
          .col-md-6
            = f.label :avatar, t('models.user.avatar')
            = f.file_field :avatar
        .row.text-left
          .col-md-6
            .form-group
            = f.label :password
            = f.password_field :password, autocomplete: 'current-password', placeholder: t('models.user.password_placeholder'), class: 'form-control',  minlength: 6
            - if @minimum_password_length
              %small.form-text.text-muted= t('devise.shared.minimum_password_length', count: @minimum_password_length)
          .col-md-6
            .form-group
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: 'current-password', placeholder: t('models.user.password_confirm_placeholder'),  class: 'form-control',  minlength: 6
        .form-group.text-left
          = f.label :phone, t('models.user.phone')
          = f.telephone_field :phone, autocomplete: 'phone', placeholder: t('models.user.phone_placeholder'),  class: 'form-control', minlength: 11
        .form-group
          = f.submit t('.sign_up'), class: 'btn btn-primary'
      = render 'devise/shared/links'

%main.container
  %h1.general-title-margin= t('.page_title')
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        = render 'sort_menu'  
    %ul.list-inline.pt-10.mb-25.mr-240
      = sanitize categories_list
  .dropdowns.mb-25.visible-xs
    %p.lead.small.mb-10= t('.filter_by')
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        = t('.select_category')
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        = sanitize categories_list
    %p.lead.small.mb-10= t('.sort_by')
    .dropdown
      = render 'sort_menu'  
  .mb-120
    .row
      = render @books
    .text-center
      %button.btn.btn-primary= t('.view_more')

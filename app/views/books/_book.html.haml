.col-xs-6.col-sm-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      - if book.images.present?
        = image_tag book.images.variant(resize: "100x100"), class: 'img-shadow general-thumbnail-img', alt: "#{book.title}"
      - else
        = image_tag "default_cover.jpg", heigth: "100", alt: "default", class: 'img-shadow general-thumbnail-img'
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book, class: 'thumb-hover-link' do 
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          %a.thumb-hover-link{href: "#"}
            %i.fa.fa-shopping-cart.thumb-icon
  .general-thumb-info
    %p.title
      = book.title
    %p.font-16.in-gold-500
      â‚¬
      = book.price
    %span.divider-sm
    %p.lead.small
      = book.author
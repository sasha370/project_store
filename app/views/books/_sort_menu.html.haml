%a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
  = t('.newest_first')
  %i.fa.fa-angle-down.dropdown-icon.pull-right
%ul.dropdown-menu
  %li
    = link_to t('.newest_first'), books_path(sort: 'created_at asc' , category: @category)
  %li
    = link_to t('.popular_first'),  books_path(sort: 'created_at asc', category: @category)
  %li
    = link_to t('.price_low_first'),  books_path(sort: 'price asc', category: @category)
    = link_to t('.price_hight_first'),  books_path(sort: 'price desc', category: @category)

%tr{ id: "order_project_#{order_project.id}"}
  %td
    .general-img-wrap-table
      = image_tag order_project.project.main_image, class: 'cart-img-shadow pull-left', alt: order_project.project.title
  %td
    %p.title= order_project.project.title
  %td
    %span.font-16.in-gold-500= number_to_currency order_project.project.old_price
  %td
    %span.font-16.in-gold-500= number_to_currency order_project.project.price
  %td
    = link_to remove_from_cart_path(order_project.id), class: 'close general-cart-close', aria_label: "Close", id: "remove_order_project_#{order_project.id}", remote: true do
      %span{'aria-hidden': "true"} &times;
